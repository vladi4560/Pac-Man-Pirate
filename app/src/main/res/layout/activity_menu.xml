<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait">

    <ImageView
        android:id="@+id/menu_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_img_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_skull" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menu_EDT_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/menu_EDT_name1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_checkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Check Name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/menu_TXT_problemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_LBL_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_sensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensors"
            android:visibility="invisible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buttons"
            android:visibility="invisible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_top_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Ten " />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
